<header>
    <h1>
        <a href="~/">Stream</a>
    </h1>
</header>

<div id="body">
    <section>
        <ul id="stream" class="nobullet"></ul>
    </section>
</div>

<script type="text/javascript">
    $(function ($) {
        $.ajax({
            url: '/api/stream'
        }).done(function (data) {
            $('#itemTemplate').tmpl(data).appendTo('#stream');
        });
    });
</script>

<script id="itemTemplate" type="text/x-jQuery-tmpl">
    <li class="item">
        <div>
            <a class="ajax" rel="#panel" href="/home/feed/${feedId}">${feedName}</a>
        </div>
        <div>
            <a  class="ajax item" 
                rel="#panel" 
                data-command="readItem"
                data-commandargument="${feedId}"
                @*data-feedid="${feedId}" *@
                href="/home/item/${id}"><strong>${name}</strong> (${publishedDateTime})</a>
        </div>
        <p>
            ${snippet}
        </p>
        <hr />
    </li>
</script>
